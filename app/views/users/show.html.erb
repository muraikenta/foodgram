<div class="user-show">
  <div class="user">
    <h2>ユーザー名</h2>
    <p><%= @user.name %></p>
    <h2>メールアドレス</h2>
    <p><%= @user.email %></p>
    <% if @user.id == @current_user.id %>
      <a href="/edit_profile">プロフィールの編集</a>
      <a href="/edit_password">パスワードの変更</a>
    <% end %>
  </div>

  <div class="likes-link">
    <a href="/users/<%= @user.id%>/likes">
      <span class="fa fa-heart"></span>お気に入りの投稿
    </a>
  </div>
  <h2>投稿一覧</h2>
  <% @foods.each do |food| %>
    <div class="foods-list-item">
      <img src="<%= food.image %>">
      <h3>
        <a href="/foods/<%= food.id %>">
          <%= food.title %>
        </a>
      </h3>
    </div>
  <% end %>
</div>
