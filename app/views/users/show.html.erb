<div class="user-show">
  <div class="user">
    <h2>ユーザー名</h2>
    <p><%= @user.name %></p>
    <h2>メールアドレス</h2>
    <p><%= @user.email %></p>
    <% if @user.id == @current_user.id %>
      <a href="/edit_profile">プロフィールの編集</a>
      <a href="/edit_password">パスワードの変更</a>
    <% end %>
  </div>

  <div class="likes-link">
    <a href="/users/<%= @user.id%>/likes">
      <span class="fa fa-heart"></span>お気に入りの投稿
    </a>
  </div>
  <h2>投稿一覧</h2>
  <% @notes.each do |note| %>
    <div class="notes-list-item">
      <img src="<%= note.image %>">
      <h3>
        <a href="/notes/<%= note.id %>">
          <%= note.title %>
        </a>
      </h3>
    </div>
  <% end %>
</div>
